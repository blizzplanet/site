= cache [:widget, :recent_articles], :expires_in => 30.seconds do
  .item.articles
    %h4 Свежие статьи
    - Article.recent.each do |article|
      .article
        .header          
          %div{:class => "icon #{article.icon}"}
          %a{:href => article_path(article)} #{article.title}
        .clear
        %p #{article.extract}
    .clear