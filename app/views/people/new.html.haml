%h1 Sign up as a new user
- @person.password = @person.password_confirmation = nil
= semantic_form_for @person do |f|
  = f.inputs do
    = f.input :login
    = f.input :email
    = f.input :password,              :as => :password
    = f.input :password_confirmation, :as => :password

  = f.buttons do
    = f.submit
  